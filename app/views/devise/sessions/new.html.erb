<div class="devise-main-container">
  <div class="sign-in-container">
    <div class="logo-container">
      <img class="logo" src="<%= asset_path 'logo/colored-logo.svg' %>"/>
    </div>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
      <div class="form-actions mt-1 mb-1">
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Forgot your password?", new_password_path(resource_name) %>
        <% end %>
      </div>
        <%= f.button :submit, "Sign in", class: "btn btn-primary btn-large w-100 p-2 mb-2 mt-3" %>
    <% end %>
  </div>
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Dont have an account? Sign up here.", new_registration_path(resource_name), class: 'text-white' %>
  <% end %>
</div>